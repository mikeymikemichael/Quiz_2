<h1>List of All Support Requests</h1>
<div>
  <%= link_to "Submit New Request", new_request_path %>
</div><br>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Department</th>
    <th>Message</th>
  </tr>

  <% @requests.each do |request| %>
  <tr>
    <td><%= request.name %></td>
    <td><%= request.email %></td>
    <td><%= request.department %></td>
    <td><%= request.message %></td>
    <td><%= link_to "Edit", edit_request_path(request) %></td>
    <td><%= link_to "Show", request_path(request) %></td>
    <td><%= link_to "Delete", request_path(request), method: :delete, data: {confirm: "Are you sure?"} %></td>

  </tr>
  <% end %>

</table>
